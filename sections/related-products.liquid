{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_top }}px;
  }
  @media (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.55 | round }}px;
      padding-bottom: {{ section.settings.padding_top | times: 0.55 | round }}px;
    }
  }
  .related-products {
    @media (max-width: 768px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none
    }
    }

  }
{% endstyle %}

<div class="section-{{ section.id }}-padding featured-collection arrows-outside  color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="title">
      <h2>
        {{ section.settings.title }}
      </h2>
    </div>

    <product-recommendations
      class="related-products page-width section-{{ section.id }}-padding"
      data-url="{{ routes.product_recommendations_url }}?limit=6"
      data-section-id="{{ section.id }}"
      data-product-id="{{ product.id }}"
    >
      {% if recommendations.performed and recommendations.products_count > 0 %}
        <swiper-instance
          class="swiper"
          slide-desktop="4"
          slide-mobile="1.3"
          space-between-desk="20"
          space-between-mob="12"
          arrows-outside="true"
          have-arrow="true"
        >
          <div class="swiper-wrapper">
            {% for recommendation in recommendations.products %}
              <div class="swiper-slide">
                {% render 'card-component', product: recommendation, section_id: section.id %}
              </div>
            {% endfor %}
          </div>
        </swiper-instance>
        <div class="swiper-button-next">.</div>
        <div class="swiper-button-prev">.</div>
      {% endif %}
    </product-recommendations>
  </div>
</div>

<script src="{{ 'related-products.js' | asset_url }}" defer></script>
{% schema %}
{
  "name": "Produtos Relacionados",
  "tag": "section",
  "class": "featured-collection",
  "settings": [
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Coleção"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titulo",
      "default": "Compre por marca"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Produtos Relacionados"
    }
  ]
}
{% endschema %}
