
{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_top }}px;
  }
  @media (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.55 | round }}px;
      padding-bottom: {{ section.settings.padding_top | times: 0.55 | round }}px;
    }
  }
{% endstyle %}

<div class="section-{{ section.id }}-padding infocard-caroussel-section  arrows-outside">
  <div class="page-width">
    <div class="title">
      <h2>
        {{ section.settings.title }}
      </h2>
    </div>

    <swiper-instance
      class="swiper"
      slide-desktop="6"
      slide-mobile="2.7"
      space-between-desk="20"
      space-between-mob="12"
      arrows-outside="true"
      have-arrow="true"
    >
      <div class="wrapper swiper-wrapper">
        {% for item in section.blocks %}
          <div class="swiper-slide">
            <div class="infocard-wrapper">
              {% assign b = item.settings %}
              {% if b.link != blank %}
                <a href="{{ b.link.url }}" title="{{ b.info }}">
              {% endif %}
              {% if b.banner != blank %}
                {% assign alt_banner = b.banner.alt | default: b.alt %}
                <picture>
                  <source media="(min-width:767px)" srcset="{{ b.banner | image_url }}">
                  <source media="(max-width:766px)" srcset="{{ b.banner_mob |  default: b.banner | image_url }}">
                  <img
                    src="{{ b.banner | image_url}}"
                    alt="{{ alt_banner}}"
                    width="{{  b.banner.width }}"
                    height="{{ b.banner.height }}"
                    loading="lazy"
                  >
                </picture>
              {% endif %}
              {% if b.info != blank %}
                <p>{{ b.info }}</p>
              {% endif %}
              {% if b.link != blank %}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </swiper-instance>
  </div>
  <div class="swiper-button-next">.</div>
  <div class="swiper-button-prev">.</div>
</div>

{% schema %}
{
  "name": "Infocard",
  "class": "brands",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo",
      "default": "Compre por marca"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "infocard",
      "name": "Infocard",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner",
          "label": "Imagem"
        },
        {
          "type": "image_picker",
          "id": "banner_mob",
          "label": "Imagem mobile"
        },
        {
          "type": "text",
          "id": "info",
          "label": "Titulo card"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Infocard carrossel"
    }
  ]
}
{% endschema %}
